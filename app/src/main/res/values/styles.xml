<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="MagentaTextTheme" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/magenta</item>
    </style>
    <style name="MagentaControl" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/black</item>
        <item name="colorPrimary">@color/magenta</item>
        <item name="colorPrimaryDark">@color/magenta_dark</item>
        <item name="colorAccent">@color/magenta</item>
    </style>
    <style name="Theme.UserDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">@color/magenta</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/white</item>
    </style>
    <style name="Theme.TransparentDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">@null</item>
        <item name="colorPrimary">@null</item>
        <item name="background">@null</item>
        <item name="android:windowBackground">@null</item>
    </style>
    <style name="DayPickerTheme" parent="ThemeOverlay.AppCompat.DayNight">
        <item name="colorPrimary">@color/magenta</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorAccent">@color/magenta_dark</item>
    </style>

    <color name="black">#000000</color>
</resources>