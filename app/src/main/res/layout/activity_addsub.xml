<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginRight="10dp">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        app:boxStrokeColor="@color/magenta"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:textColorHint="@color/magenta"
        android:layout_marginTop="30dp"
        app:hintTextAppearance="@style/MagentaTextTheme"
        android:layout_marginBottom="10sp"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_subcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Subject Code"
            android:textSize="14sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxStrokeColor="@color/magenta"
        android:layout_width="match_parent"
        app:hintTextAppearance="@style/MagentaTextTheme"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/magenta"
        android:layout_marginBottom="10sp"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_subname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Subject Name"
            android:textColorHint="@color/magenta"
            android:textSize="14sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        app:boxStrokeColor="@color/magenta"
        app:hintTextAppearance="@style/MagentaTextTheme"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:textColorHint="@color/magenta"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10sp"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_subshortform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/magenta"
            android:hint="Subject Short Form"
            android:textSize="14sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        app:hintTextAppearance="@style/MagentaTextTheme"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxStrokeColor="@color/magenta"

        android:layout_marginTop="10dp"
        android:layout_marginBottom="10sp"
        android:textColorHint="@color/magenta"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_facultyname"
            android:textColorHighlight="@color/magenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Faculty Name"
            android:textSize="14sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        app:hintTextAppearance="@style/MagentaTextTheme"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxStrokeColor="@color/magenta"

        android:layout_marginTop="10dp"
        android:layout_marginBottom="10sp"
        android:textColorHint="@color/magenta"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_zoomlink"
            android:textColorHighlight="@color/magenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Class (Conference) Link"
            android:textSize="14sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_marginBottom="10sp"
        android:layout_marginStart="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cmd_addsub"
            android:layout_width="wrap_content"
            android:layout_marginEnd="10sp"
            android:layout_marginRight="10sp"
            android:layout_height="wrap_content"
            android:paddingEnd="5sp"
            android:paddingStart="5sp"
            android:paddingTop="5sp"
            android:paddingBottom="5sp"
            android:background="@drawable/roundedrect_bg"
            android:textColor="@color/white"
            android:backgroundTint="@color/magenta"
            android:layout_gravity="end"
            android:text="Add Subject!"
            android:paddingRight="5sp" />

        <TextView
            android:paddingEnd="5sp"
            android:paddingStart="5sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/magenta"
            android:paddingTop="5sp"
            android:paddingBottom="5sp"
            android:background="@drawable/roundedrect_bg"
            android:id="@+id/cmd_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Cancel" />
    </LinearLayout>
</LinearLayout>